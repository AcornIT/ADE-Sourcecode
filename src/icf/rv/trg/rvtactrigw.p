TRIGGER PROCEDURE FOR WRITE OF rvt_action OLD BUFFER o_rvt_action.

/* generic trigger override include file to disable trigger if required */
{af/sup2/aftrigover.i &DB-NAME      = "RVDB"
                      &TABLE-NAME   = "rvt_action"
                      &TRIGGER-TYPE = "WRITE"}

/* Created automatically using ERwin ICF Trigger template db/af/erw/afercustrg.i
   Do not change manually. Customisations to triggers should be placed in separate
   include files pulled into the trigger. ICF auto generates write trigger custom
   include files. Delete or create customisation include files need to be created
   manually. Be sure to put the hook in ERwin directly so as not to have you changes
   overwritten.
   User defined Macro (UDP) Summary (case sensitive)
   rvt_action           Expands to full table name, e.g. gsm_user
   %TableFLA            Expands to table unique code, e.g. gsmus
   %TableObj            If blank or not defined expands to table_obj with no prefix (framework standard)
                        If defined, uses this field as the object field
                        If set to "none" then indicates table does not have an object field
   XYZ                  Do not define so we can compare against an empty string

   See docs for explanation of replication macros 
*/   

&SCOPED-DEFINE TRIGGER_TABLE rvt_action
&SCOPED-DEFINE TRIGGER_FLA rvtac
&SCOPED-DEFINE TRIGGER_OBJ action_obj


DEFINE BUFFER lb_table FOR rvt_action.      /* Used for recursive relationships */
DEFINE BUFFER lb1_table FOR rvt_action.     /* Used for lock upgrades */



/* Standard top of WRITE trigger code */
{af/sup/aftrigtopw.i}

/* properform fields if enabled for table */
IF CAN-FIND(FIRST gsc_entity_mnemonic
            WHERE gsc_entity_mnemonic.entity_mnemonic = 'rvtac':U
              AND gsc_entity_mnemonic.auto_properform_strings = YES) THEN
  RUN af/app/afpropfrmp.p (INPUT BUFFER rvt_action:HANDLE).
  



/* Generated by ICF ERwin Template */
/* rvt_transaction resulted in rvt_action ON CHILD UPDATE RESTRICT */
IF NEW rvt_action OR  rvt_action.task_number <> o_rvt_action.task_number OR rvt_action.transaction_id <> o_rvt_action.transaction_id  THEN
  DO:
    IF NOT(CAN-FIND(FIRST rvt_transaction WHERE
        rvt_action.task_number = rvt_transaction.task_number and
        rvt_action.transaction_id = rvt_transaction.transaction_id)) THEN
              DO:
                /* Cannot update child because parent does not exist ! */
                ASSIGN lv-error = YES lv-errgrp = "AF ":U lv-errnum = 103 lv-include = "rvt_action|rvt_transaction":U.
                RUN error-message (lv-errgrp, lv-errnum, lv-include).
              END.
    
    
  END.








IF NOT NEW rvt_action AND rvt_action.{&TRIGGER_OBJ} <> o_rvt_action.{&TRIGGER_OBJ} THEN
    DO:
        ASSIGN lv-error = YES lv-errgrp = "AF":U lv-errnum = 13 lv-include = "table object number":U.
        RUN error-message (lv-errgrp,lv-errnum,lv-include).
    END.

/* Customisations to WRITE trigger */
{rv/trg/rvtactrigw.i}

/* Update Audit Log */
IF CAN-FIND(FIRST gsc_entity_mnemonic
            WHERE gsc_entity_mnemonic.entity_mnemonic = 'rvtac':U
              AND gsc_entity_mnemonic.auditing_enabled = YES) THEN
  RUN af/app/afauditlgp.p (INPUT "WRITE":U, INPUT "rvtac":U, INPUT BUFFER rvt_action:HANDLE, INPUT BUFFER o_rvt_action:HANDLE).

/* Standard bottom of WRITE trigger code */
{af/sup/aftrigendw.i}



