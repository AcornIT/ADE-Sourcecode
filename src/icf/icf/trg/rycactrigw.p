{icf/trg/rycactrigw.i}

/* Update Audit Log */
IF CAN-FIND(FIRST gsc_entity_mnemonic
            WHERE gsc_entity_mnemonic.entity_mnemonic = 'rycac':U
              AND gsc_entity_mnemonic.auditing_enabled = YES) THEN
  RUN af/app/afauditlgp.p (INPUT "WRITE":U, INPUT "rycac":U, INPUT BUFFER ryc_action:HANDLE, INPUT BUFFER o_ryc_action:HANDLE).

