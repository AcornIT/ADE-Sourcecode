/* Standard top of WRITE trigger code */
{af/sup/aftrigtopw.i}

/* properform fields if enabled for table */
IF CAN-FIND(FIRST gsc_entity_mnemonic
            WHERE gsc_entity_mnemonic.entity_mnemonic = 'rycac':U
              AND gsc_entity_mnemonic.auto_properform_strings = YES) THEN
  RUN af/app/afpropfrmp.p (INPUT BUFFER ryc_action:HANDLE).
  



/* Generated by ICF ERwin Template */
/* gsc_object is run by ryc_action ON CHILD UPDATE SET NULL */
IF NEW ryc_action OR  ryc_action.object_obj <> o_ryc_action.object_obj  THEN
  DO:
    IF NOT(CAN-FIND(FIRST gsc_object WHERE
        ryc_action.object_obj = gsc_object.object_obj)) THEN DO:
        
        ASSIGN ryc_action.object_obj = 0 .
    END.
    
    
  END.

/* Generated by ICF ERwin Template */
/* gsc_instance_attribute is posted by ryc_action ON CHILD UPDATE SET NULL */
IF NEW ryc_action OR  ryc_action.instance_attribute_obj <> o_ryc_action.instance_attribute_obj  THEN
  DO:
    IF NOT(CAN-FIND(FIRST gsc_instance_attribute WHERE
        ryc_action.instance_attribute_obj = gsc_instance_attribute.instance_attribute_obj)) THEN DO:
        
        ASSIGN ryc_action.instance_attribute_obj = 0 .
    END.
    
    
  END.








IF NOT NEW ryc_action AND ryc_action.{&TRIGGER_OBJ} <> o_ryc_action.{&TRIGGER_OBJ} THEN
    DO:
        ASSIGN lv-error = YES lv-errgrp = "AF":U lv-errnum = 13 lv-include = "table object number":U.
        RUN error-message (lv-errgrp,lv-errnum,lv-include).
    END.

